<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body>
    <%- include("../partials/nav") %>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12 mt-3">
          <form method="post">
            <h1 class="mb-3">Edit User</h1>
            <hr />
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <input type="hidden" name="userid" value="<%= user.id %>" />

            <div class="row mb-3">
              <label for="fullname" class="col-sm-2 col-form-label"
                >Full Name</label
              >
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="fullname"
                  name="fullname"
                  value="<%= user.fullname %>"
                />
              </div>
            </div>

            <div class="row mb-3">
              <label for="email" class="col-sm-2 col-form-label">Email</label>
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="email"
                  value="<%= user.email %>"
                />
              </div>
            </div>

            <div class="row mb-3">
              <label for="role" class="col-sm-2 col-form-label">Roles</label>
              <div class="col-sm-10">
                <% roles.forEach(role => { %>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="roles"
                  value="<%= role.id %>" id="role_<%= role.id %>" <%=
                  user.roles.some(userRole => userRole.id == role.id) ?
                  'checked' : '' %> />
                  <label class="form-check-label" for="role_<%= role.id %>"
                    ><%= role.roleName %></label
                  >
                </div>
                <% }) %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">
                  Save Changes
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
