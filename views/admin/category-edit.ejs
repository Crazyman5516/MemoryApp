<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body>
    <%- include("../partials/nav") %>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12 mt-3">
          <form method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <input type="hidden" name="categoryid" value="<%= category.id %>" />
            <div class="row mb-3">
              <label for="name" class="col-sm-2 col-form-label">Name</label>
              <div class="col-sm-8">
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  value="<%= category.name %>"
                />
              </div>

              <div class="col-sm-8 offset-sm-2">
                <button
                  style="margin-top: 10px"
                  type="submit"
                  class="btn btn-primary"
                >
                  Kaydet
                </button>
              </div>
            </div>
          </form>
        </div>
        <hr />
        <h3 class="mt-4">Bu Kategoriye Ait Bloglar</h3>
        <p>Toplam <strong><%= blogs.length %></strong> blog bulundu.</p>
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th style="width: 50px">id</th>
              <th style="width: 150px">resim</th>
              <th>baslik</th>
              <th style="width: 200px">id</th>
            </tr>
          </thead>
          <tbody>
            <% blogs.forEach(element => { %>
            <tr>
              <td>#<%= element.dataValues.id %></td>
              <td>
                <img
                  class="img-fluid"
                  src="/static/images/<%= element.dataValues.resim %>"
                  alt=""
                />
              </td>
              <td><%= element.dataValues.baslik %></td>
              <td>
                <a
                  class="btn btn-sm btn-secondary"
                  href="/admin/blogs/<%= element.dataValues.id %>"
                  >Edit</a
                >
                <form
                  style="display: inline-block"
                  action="/admin/categories/remove"
                  method="post"
                >
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                  <input
                    type="hidden"
                    name="blogid"
                    value="<%= element.id %>"
                  />
                  <input
                    type="hidden"
                    name="categoryid"
                    value="<%= category.id %>"
                  />
                  <button type="submit" class="btn btn-sm btn-danger">
                    Kategoriden Çıkar
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
