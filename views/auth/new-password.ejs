<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Şifre Sıfırlama</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        padding: 20px 0;
      }
      .reset-container {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        max-width: 1000px;
      }
      .reset-left {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
        padding: 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
      }
      .reset-right {
        padding: 40px;
      }
      .form-control:focus {
        border-color: #6a11cb;
        box-shadow: 0 0 0 0.25rem rgba(106, 17, 203, 0.25);
      }
      .btn-reset {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        border: none;
        padding: 10px 0;
        font-weight: 600;
      }
      .btn-reset:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(106, 17, 203, 0.4);
      }
      .password-toggle {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #6c757d;
      }
      .input-group {
        position: relative;
      }
    </style>
  </head>
  <body>
    <div class="container reset-container">
      <div class="row g-0">
        <!-- Sol Panel - Bilgilendirme -->
        <div class="col-md-6 reset-left">
          <h2 class="mb-4">Şifrenizi Sıfırlayın</h2>
          <p class="mb-4">
            Yeni şifrenizi belirleyin ve hesabınıza güvenle tekrar giriş yapın.
          </p>
          <ul class="feature-list">
            <li><i class="fas fa-check"></i> Güvenli şifreleme</li>
            <li><i class="fas fa-check"></i> Hızlı ve kolay işlem</li>
            <li><i class="fas fa-check"></i> 7/24 destek</li>
          </ul>
        </div>

        <!-- Sağ Panel - Şifre Sıfırlama Formu -->
        <div class="col-md-6 reset-right">
          <h3 class="text-center mb-4" style="color: #6a11cb">Yeni Şifre</h3>

          <form method="post" action="/account/new-password">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <input type="hidden" name="userId" value="<%= userId %>" />
            <input type="hidden" name="token" value="<%= token %>" />

            <!-- Yeni Şifre -->
            <div class="mb-3">
              <label for="newPassword" class="form-label">Yeni Şifre</label>
              <div class="input-group">
                <span class="input-group-text"
                  ><i class="fas fa-lock"></i
                ></span>
                <input
                  type="password"
                  class="form-control"
                  id="newPassword"
                  name="newPassword"
                  required
                />
                <span class="password-toggle">
                  <i class="fas fa-eye"></i>
                </span>
              </div>
            </div>

            <!-- Şifre Tekrar -->
            <div class="mb-3">
              <label for="repeatPassword" class="form-label"
                >Şifre Tekrar</label
              >
              <div class="input-group">
                <span class="input-group-text"
                  ><i class="fas fa-lock"></i
                ></span>
                <input
                  type="password"
                  class="form-control"
                  id="repeatPassword"
                  name="repeatPassword"
                  required
                />
                <span class="password-toggle">
                  <i class="fas fa-eye"></i>
                </span>
              </div>
              <!-- Hata Mesajı Alanı -->
              <div id="passwordError" class="text-danger mt-2 d-none"></div>
            </div>

            <!-- Gönder Butonu -->
            <div class="d-grid mb-4">
              <button type="submit" class="btn btn-reset btn-lg text-white">
                <i class="fas fa-key me-2"></i>Şifreyi Güncelle
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Şifre görünürlüğünü değiştirme
        document
          .querySelectorAll(".password-toggle")
          .forEach(function (toggle) {
            toggle.addEventListener("click", function () {
              const input = this.previousElementSibling;
              const icon = this.querySelector("i");

              if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
              } else {
                input.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
              }
            });
          });

        // Form gönderimini kontrol etme
        document.querySelector("form").addEventListener("submit", function (e) {
          const password = document.getElementById("password");
          const repeatPassword = document.getElementById("repeatPassword");
          const errorDiv = document.getElementById("passwordError");

          if (password.value !== repeatPassword.value) {
            e.preventDefault(); // Formun gönderilmesini engelle
            errorDiv.textContent = "Şifreler eşleşmiyor! Lütfen kontrol edin.";
            errorDiv.classList.remove("d-none"); // Hata mesajını göster
            password.classList.add("is-invalid");
            repeatPassword.classList.add("is-invalid");
          } else {
            errorDiv.classList.add("d-none"); // Hata yoksa mesajı gizle
            password.classList.remove("is-invalid");
            repeatPassword.classList.remove("is-invalid");
          }
        });
      });
    </script>
  </body>
</html>
